<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tabs.third.Third_Setting_Activity">

    <TextView
        android:id="@+id/sensitivity_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="8dp"
        android:text="@string/sensitive"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_L"
        app:layout_constraintLeft_toLeftOf="@+id/seekBar_L" />

    <TextView
        android:id="@+id/sensitivity_info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/insensitive"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_L"
        app:layout_constraintRight_toRightOf="@+id/seekBar_L" />

    <TextView
        android:id="@+id/left_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="@string/left"
        app:layout_constraintRight_toLeftOf="@+id/seekBar_L"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekBar_L"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="150dp"
        android:max="10"
        android:progress="5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/right_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/right"
        app:layout_constraintRight_toLeftOf="@+id/seekBar_R"
        app:layout_constraintTop_toTopOf="@+id/left_text_view" />

    <SeekBar
        android:id="@+id/seekBar_R"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:max="10"
        android:progress="5"
        app:layout_constraintTop_toTopOf="@+id/seekBar_L"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/up_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/up"
        app:layout_constraintRight_toLeftOf="@+id/seekBar_U"
        app:layout_constraintTop_toTopOf="@+id/right_text_view" />

    <SeekBar
        android:id="@+id/seekBar_U"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:max="10"
        android:progress="5"
        app:layout_constraintTop_toTopOf="@+id/seekBar_R"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/down_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/down"
        app:layout_constraintRight_toLeftOf="@+id/seekBar_D"
        app:layout_constraintTop_toTopOf="@+id/up_text_view" />

    <SeekBar
        android:id="@+id/seekBar_D"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:max="10"
        android:progress="5"
        app:layout_constraintTop_toTopOf="@+id/seekBar_U"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="75dp"
        android:text="@string/confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_D" />

</android.support.constraint.ConstraintLayout>